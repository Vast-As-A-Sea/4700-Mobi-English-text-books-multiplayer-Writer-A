        <dc:title>Chasing Greatness: Johnny Miller, Arnold Palmer, and the Miracle at Oakmont</dc:title>
        <dc:creator opf:file-as="Lazarus, Adam" opf:role="aut">Adam Lazarus</dc:creator>
